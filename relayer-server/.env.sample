# Chain Configuration
# Source chain (Ethereum mainnet)
SRC_CHAIN_RPC=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
# Destination chain (Base or another EVM chain)
DST_CHAIN_RPC=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
# Whether to create forks for testing (true for local development)
SRC_CHAIN_CREATE_FORK=true
DST_CHAIN_CREATE_FORK=true

# Relayer Configuration
# Ethereum private key for the relayer (from test file)
RELAYER_PRIVATE_KEY=
# Aptos private key for the relayer
APTOS_PRIVATE_KEY=your_aptos_private_key_here
# Aptos address for the relayer
APTOS_ADDRESS=your_aptos_address_here

# Server Configuration
# Port for the relayer server
SERVER_PORT=3001
# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Optional: Additional configuration for testing
# These values are used in the test files but not required for basic operation
# User private key (for testing purposes)
USER_PRIVATE_KEY=
# Aptos environment variables (if using Aptos testnet)
APTOS_NODE_URL=https://fullnode.mainnet.aptoslabs.com/v1 